{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* === File layout === */
    "rootDir": "src",
    "outDir": "dist",

    /* === Module system (ES modules for modern Node) === */
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "verbatimModuleSyntax": false,

    /* === Interop and helpful options === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* === Type checking === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* === Outputs / maps === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === JSX (not used by backend but harmless) === */
    "jsx": "react-jsx",

    /* === libs & types === */
    "lib": ["esnext"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

